extends ../templates/default

block content
    div(class='row')
    div(class='col-md-6 col-md-offset-3')
      div(class='panel panel-default')
        div(class='panel-heading')= 'Actualizar Estatus '
        div(class='panel-body')
          form(action='http://localhost:3000/users/mestatus' method='post' autocomplete='off')
            div(class='form-group')
              label(for="id")= "Id"
              ul
              input(type='text' name='id' id='id' placeholder='Id' class='form-control')  
            div(class='form-group')
              label(for="estatus")= "Estatus"
              ul
              input(type='text' name='estatus' id='estatus' placeholder='Estatus' class='form-control')             
            button(type="submit" class='btn btn-default')= 'Actualizar'