extends ../templates/default

block content
    div(class='row')
    div(class='col-md-6 col-md-offset-3')
      div(class='panel panel-default')
        div(class='panel-heading')= 'Actualizar'
        div(class='panel-body')
          form(action='http://localhost:3000/users/mestatus' method='post' autocomplete='off')
            div(class='form-group')
              label(for="nombre")= "Nombre"
              input(type='text' name='nombre' id='nombre' placeholder='Nombre' class='form-control')
            div(class='form-group')
              label(for="direccion")= "Direccion"
              input(type='text' name='direccion' id='direccion' placeholder='Direccion' class='form-control')  
            div(class='form-group')
              label(for="telefono")= "Telefono"
              input(type='text' name='telefono' id='telefono' placeholder='Telefono' class='form-control')  
            div(class='form-group')
             label(for="email")= "Email"
             input(type='email' name='email' id='email' placeholder='Email' class='form-control') 
            div(class='form-group')
              label(for="usuario")= "Usuario"
              input(type='text' name='usuario' id='usuario' placeholder='Usuario' class='form-control')
            div(class='form-group')
              label(for="prenda")= "Prenda"
              input(type='text' name='prenda' id='prenda' placeholder='Prenda' class='form-control')
            div(class='form-group')
              label(for="fecha")= "Fecha"
              input(type='text' name='fecha' id='fecha' placeholder='Fecha' class='form-control')
            div(class='form-group')
              label(for="id")= "Id"
              input(type='text' name='id' id='id' placeholder='Id' class='form-control')
            div(class='form-group')
              label(for="cantidad")= "Cantidad"
              input(type='text' name='cantidad' id='cantidad' placeholder='Cantidad' class='form-control')             
            button(type="submit" class='btn btn-default')= 'Actualizar'