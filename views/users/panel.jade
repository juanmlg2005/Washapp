extends ../templates/default

block content
    div(class='row')
    div(class='col-md-6 col-md-offset-3')
      div(class='panel panel-default')
        div(class='panel-heading')= 'Perfil'
        div(class='panel-body')
          div(class='form-group')
              label(for="id")= "Nombre: " + user.nombre 
          div(class='form-group')
              label(for="estatus")= "Direccion: " + user.direccion
          div(class='form-group')
              label(for="estatus")= "Telefono: " + + user.telefono
          div(class='form-group')
              label(for="id")= "E-mail: " + user.email
          div(class='form-group')
              label(for="estatus")= "Usuario: " + user.usuario