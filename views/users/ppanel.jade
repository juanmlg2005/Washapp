extends ../templates/default

block content
    div(class='row')
    div(class='col-md-6 col-md-offset-3')
      div(class='panel panel-default')
        div(class='panel-heading')= 'Registrar Pedido '
        div(class='panel-body')
          form(action='http://localhost:3000/users/ppanel' method='post' autocomplete='off')
            div(class='form-group')
              label(for="prenda")= "Prenda"
              ul
              input(type='text' name='prenda' id='prenda' placeholder='Prenda' class='form-control')
            div(class='form-group')
              label(for="cantidad")= "Cantidad"
              ul
              input(type='text' name='cantidad' id='cantidad' placeholder='Cantidad' class='form-control')
            div(class='form-group')
              label(for="nombre")= "Nombre"
              ul
              input(type='text' name='nombre' id='nombre' placeholder='Nombre' class='form-control')
            div(class='form-group')
              label(for="email")= "E-Mail"
              ul
              input(type='text' name='email' id='email' placeholder='Correo Electronico' class='form-control')
            div(class='form-group')
              label(for="telefono")= "Telefono"
              ul
              input(type='text' name='telefono' id='telefono' placeholder='Telefono' class='form-control')
            div(class='form-group')
              label(for="direccion")= "Direccion"
              ul
              input(type='text' name='direccion' id='direccion' placeholder='direccion' class='form-control')
            div(class='form-group')
              label(for="precio")= "Precio"
              ul
              input(type='text' name='precio' id='precio' placeholder='Precio' class='form-control')
            button(type="submit" class='btn btn-default')= 'Registrar'
            div(class=['ui', 'message','error'])
    script(src='/javascripts/validacion.js') 