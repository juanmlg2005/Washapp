extends ../templates/default

block content
  div(class='row')
    div(class='col-md-6 col-md-offset-3')
      div(class='panel panel-default')
        div(class='panel-heading')= 'Consultar Estatus'
        div(class='panel-body')
          form(action='http://localhost:3000/users/ePanel' method='post' autocomplete='off')
             div(class='form-group')
                    label(for="id")= "Id"
                    input(type='text' name='id' id='id' placeholder='Id' class='form-control')
        if !buscar 
             div(class='form-group')
              label(for="prenda")= 'Nombre: '+ buscar.nombre
             div(class='form-group')
             label(for="cantidad")= 'Domicilio: ' + user.direccion
              div(class='form-group')
              label(for="nombre")= 'Telefono: ' + user.telefono
             div(class='form-group')
              label(for="email")= 'E-Mail: '+ user.email
              div(class='form-group')
              label(for="telefono")= 'Telefono: ' + user.telefono
             div(class='form-group')
              label(for="direccion")= 'Usuario: ' + user.usuario
             button(type="submit" class='btn btn-default')= 'Buscar'       